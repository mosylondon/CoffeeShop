@model CoffeeShop.Models.Item

@{
    ViewData["Title"] = "Details";
}



<h4>Item Details</h4>
<hr />
<div class="row">
    <div class="col-md-7">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                Name : <input asp-for="Name" class="form-control" readonly />

            </div>
            <div class="form-group">

                Price : <input asp-for="Price" class="form-control" readonly />

            </div>
            <div class="form-group">
                Description : <input asp-for="ProductDescription" class="form-control" readonly />

            </div>

            <div class="form-group">

                Category : <input asp-for="ProductTypes.ProductType" class="form-control" readonly />
            </div>
            <div class="form-group">

                Quantity :<select class="form-control" name="Quantity" id="Quantity">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add to Cart" class="btn btn-info" />
            </div>
        </form>
    </div>
    <div class="col-3">
        <div class="form-group">
            <label asp-for="ItemImage" class="control-label"></label>
            <img src="~/@Model.ItemImage" width="100%" height="250px" style="border-radius;5px; border:1px solid #efefef " />
            @*<img src="~/Images/noimage.png" width="100%" height="250px" style="border-radius;5px; border:1px solid #efefef " />*@

        </div>
    </div>
</div>

<div>
    <a asp-action="Index" , asp-controller="Home">Back to List</a>
</div>

