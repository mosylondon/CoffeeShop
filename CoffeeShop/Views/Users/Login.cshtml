@model CoffeeShop.Models.User

<div class="row">
    <br />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Login To Place your Order</h2>
            <hr />
        </div>
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Enter Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Enter Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                      <p style="color:red"> @ViewBag.Message</p>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <a asp-action="Create" asp-controller="Users">Register</a>
            </form>
        </div>
    </div>
</div>
